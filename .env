# Environment
ENVIRONMENT=dev  # dev, test, or prod

# Paths
SIGNATURE_BASE_DIR=./app
SIGNATURE_STORAGE_DIR=./storage
SIGNATURE_TEMP_DIR=./temp_signatures
SIGNATURE_DB_PATH=./signatures.db

# Database settings
SIGNATURE_DB_POOL_SIZE=5
SIGNATURE_DB_POOL_TIMEOUT=30

# File storage settings
SIGNATURE_MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
SIGNATURE_MAX_FILE_AGE_HOURS=24

# Processing settings
SIGNATURE_MAX_PDF_PAGES=50
SIGNATURE_MAX_SIGNATURES_PER_PAGE=10
SIGNATURE_PROCESS_TIMEOUT=300  # 5 minutes

# API settings
SIGNATURE_API_TITLE="Signature Analysis Service"
SIGNATURE_API_VERSION="1.0.0"
SIGNATURE_CORS_ORIGINS=["*"]  # Use ["https://yourdomain.com"] for production

# Detection defaults
SIGNATURE_MIN_AREA=500
SIGNATURE_COMPLEXITY_THRESHOLD=20.0
SIGNATURE_GAUSSIAN_BLUR_KERNEL=5
SIGNATURE_ADAPTIVE_BLOCK_SIZE=11

# Comparison defaults
SIGNATURE_COMPARISON_THRESHOLD=0.7
SIGNATURE_GRID_SIZE=5
SIGNATURE_HOG_WEIGHT=1.0
SIGNATURE_CONTOUR_WEIGHT=1.0
SIGNATURE_DENSITY_WEIGHT=1.0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
